@model IEnumerable<TranTrungDung_2280600423_Lab03WebBanHang.Models.Product>

@{
    ViewData["Title"] = "Index";
    var isAdmin = User.IsInRole("Admin");
}

<div class="container py-5">
    <h1 class="text-center text-white bg-primary p-3 rounded">Danh sách sản phẩm</h1>

    <div class="text-center mb-4">
        @if (isAdmin)
        {
            <a asp-action="Add" class="btn btn-lg btn-success shadow-sm">➕ Thêm sản phẩm</a>
        }
    </div>

    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-lg border-0 rounded-4 overflow-hidden">
                    <img class="card-img-top" src="@item.ImageUrl" alt="@item.Name" style="height: 250px; object-fit: cover;">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-center text-primary fw-bold">@item.Name</h5>
                        <p class="card-text text-muted text-center">@item.Description</p>
                        <div class="mt-auto text-center">
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    @if (isAdmin)
                                    {
                                        <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-sm btn-outline-success">✏️ Update</a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">🗑️ Delete</a>
                                    }
                                    <a asp-action="Display" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">🔍 View</a>
                                </div>
                                <small class="text-danger fw-bold fs-5">$@item.Price</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
