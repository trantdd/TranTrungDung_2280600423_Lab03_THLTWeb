@model ShoppingCart
@{
    ViewData["Title"] = "AddToCart";
}

<h2 class="text-center text-primary my-4 fw-bold">Giỏ hàng</h2>
<div class="container">
    @if (Model.Items.Any())
    {
        <table class="table table-bordered table-hover text-center align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Sản phẩm</th>
                    <th>Số lượng</th>
                    <th>Giá</th>
                    <th>Tổng giá</th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td class="fw-semibold">@item.Name</td>
                        <td>
                            <span class="badge bg-secondary fs-6">@item.Quantity</span>
                        </td>
                        <td class="text-danger fw-bold">@($"{item.Price:#,##0} Vnđ")</td>
                        <td class="text-success fw-bold">@($"{(item.Price * item.Quantity):#,##0} Vnđ")</td>
                        <td>
                            <a class="btn btn-danger btn-sm" asp-action="RemoveFromCart" asp-route-productId="@item.ProductId">
                                <i class="bi bi-trash"></i> Remove
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="text-center mt-4">
            <a class="btn btn-success btn-lg px-5 fw-bold shadow-sm" asp-controller="ShoppingCart" asp-action="Checkout">
                <i class="bi bi-bag-check"></i> Thanh toán
            </a>
        </div>
    }
    else
    {
        <div class="text-center text-muted my-5">
            <h4><i class="bi bi-cart-x"></i> Giỏ hàng của bạn đang trống!</h4>
            <a href="/" class="btn btn-primary mt-3">
                <i class="bi bi-shop"></i> Tiếp tục mua sắm
            </a>
        </div>
    }
</div>
